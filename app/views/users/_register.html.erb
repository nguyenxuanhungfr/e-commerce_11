<%= form_for @user do |f| %>
  <div class="col-md-offset-3 col-md-6 col-sm-6">
  <%= render "shared/error", object: f.object %>
    <div class="your-details">
      <h5>
        <%= yield(:title) %>
      </h5>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "acount" %>
        <strong class="red">
        *
        </strong>
        </label>
         <%= f.text_field :name, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
         <%= t "email" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.text_field :email, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "password" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "confirmation_pw" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password_confirmation, class: "input name_field" %>
      </div>
      <% if logged_in? %>
        <div class="form-row">
          <span class="picture">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
          </span>
        </div>
       <% end %>
       <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
