<%= form_for @user do |f| %>
  <div class="col-md-6 col-sm-6">
  <%= render "users/error", object: f.object %>
    <div class="your-details">
      <h5>
        <%= t "register" %>
      </h5>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "acount" %>
        <strong class="red">
        *
        </strong>
        </label>
         <%= f.text_field :name, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
         <%= t "email" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.text_field :email, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "password" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password, class: "input name_field" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "confirmation_pw" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password_confirmation, class: "input name_field" %>
      </div>
       <%= f.submit t("register"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
