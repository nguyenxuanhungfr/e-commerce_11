<%= javascript_include_tag "script.min.js", "data-turbolinks-track": "reload" %>
<%= javascript_include_tag "scroll.js", "data-turbolinks-track": "reload" %>
<div class="container_fullwidth">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="products-details">
          <div class="preview_image">
            <div class="preview-small">
              <%= gravatar_for @product %>
            </div>
            <div class="thum-image">
              <ul id="gallery_01" class="prev-thum">
                <%= render partial: "products/images_detail",
                collection: @support.images, as: :images %>
              </ul>
              <a class="control-left" id="thum-prev" href="javascript:void(0);">
              <i class="fa fa-chevron-left">
              </i>
              </a>
              <a class="control-right" id="thum-next" href="javascript:void(0);">
              <i class="fa fa-chevron-right">
              </i>
              </a>
            </div>
          </div>
          <div class="products-description">
            <h5 class="name">
              <%= @product.name %>
            </h5>
            <section>
              <% if logged_in? %>
                 <%= render "products/start", rating: @rating, product: @product %>
              <% end %>
            </section>
            <p>
              <%= @product.description %>
            </p>
            <hr class="border">
            <div class="price">
              <%= t "price" %> :
              <span class="new_price">
                <%= number_format @product.new_price %>
                <sup>
                </sup>
              </span>
              <span class="old_price">
                <%= number_format @product.price %>
                <sup>
                </sup>
              </span>
            </div>
            <hr class="border">
            <div class="wided">
              <div class="qty">
                <%= t "quantity" %> &nbsp;&nbsp;:
                <select>
                  <option>
                    <%= Settings.settings.max_value_input %>
                  </option>
                </select>
              </div>
              <div class="button_group">
                <%= link_to t("add_to_cart"), add_to_cart_path(id: @product),
                  remote: true,method: :post, class: "button add-cart" %>
                <button class="button favorite">
                  <i class="fa fa-heart-o"></i>
                </button>
              </div>
               <div class="fb-like" data-href=<%= product_url(id: @product) %> data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
            </div>
            <div class="clearfix">
            </div>
            <hr class="border">
          </div>
        </div>
        <div class="clearfix">
        </div>
        <div id="tabnav">
          <%= render "flash/flash" %>
          <ul>
            <li>
              <a href="javascrript:void(0)">
                <%= t "comment" %>
              </a>
            </li>
          </ul>
        </div>
        <div class="col-md-12">
          <div class="fb-comments" data-href=<%= product_url(id: @product)  %> data-numposts="5" width="100%"></div>
          </div>
        <div class="clearfix">
        </div>
        <div class="clearfix">
        </div>
      </div>
      <div class="col-md-3">
        <div class="special-deal leftbar">
          <h4 class="title">
            <%= t "hot" %>
            <strong>
            <%= t "products" %>
            </strong>
          </h4>
          <%= render partial: "product_new",
            collection: @support.product_slibar, as: :product_new %>
        </div>
        <div class="clearfix">
        </div>
      </div>
    </div>
    <div class="clearfix">
    </div>
  </div>
</div>
