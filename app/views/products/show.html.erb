<div class="container_fullwidth">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="products-details">
          <div class="preview_image">
            <div class="preview-small">
              <%= gravatar_for @product %>
            </div>
          </div>
          <div class="products-description">
            <h5 class="name">
              <%= @product.name %>
            </h5>
            <section>
              <% if logged_in? %>
                 <%= render "products/start", rating: @rating, product: @product %>
              <% end %>
            </section>
            <p>
              <%= @product.description %>
            </p>
            <hr class="border">
            <div class="price">
              <%= t "price" %> :
              <span class="new_price">
                <%= number_format @product.new_price %>
                <sup>
                </sup>
              </span>
              <span class="old_price">
                <%= number_format @product.price %>
                <sup>
                </sup>
              </span>
            </div>
            <hr class="border">
            <div class="wided">
              <div class="qty">
                <%= t "quantity" %> &nbsp;&nbsp;:
                <select>
                  <option>
                    <%= Settings.settings.max_value_input %>
                  </option>
                </select>
              </div>
              <div class="button_group">
                <%= link_to t("add_to_cart"), add_to_cart_path(id: @product),
                  remote: true,method: :post, class: "button add-cart" %>
                <button class="button compare">
                  <i class="fa fa-exchange"></i>
                </button>
                <button class="button favorite">
                  <i class="fa fa-heart-o"></i>
                </button>
                <button class="button favorite">
                  <i class="fa fa-envelope-o"></i>
                </button>
              </div>
            </div>
            <div class="clearfix">
            </div>
            <hr class="border">
          </div>
        </div>
        <div class="clearfix">
        </div>
        <div id="tabnav">
          <%= render "flash/flash" %>
          <ul>
            <li>
              <a href="javascrript:void(0)">
                <%= t "comment" %>
              </a>
            </li>
          </ul>
        </div>
        <div class="tab-content-wrap">
          <div class="tab-content" id="Reviews">
            <div class="user_comment">
              <%= render partial: "comments/comment",
                collection: @support.comments, as: :comment %>
            </div>
            <% if logged_in? %>
              <%= render "comments/form" %>
            <% else %>
              <div class="alert alert-danger" role="alert"><%= t "need_login" %></div>
            <% end %>
          </div>
        </div>
        <div class="clearfix">
        </div>
        <div class="clearfix">
        </div>
      </div>
      <div class="col-md-3">
        <div class="special-deal leftbar">
          <h4 class="title">
            <%= t "hot" %>
            <strong>
            <%= t "products" %>
            </strong>
          </h4>
          <%= render partial: "product_new",
            collection: @support.product_slibar, as: :product_new %>
        </div>
        <div class="clearfix">
        </div>
      </div>
    </div>
    <div class="clearfix">
    </div>
  </div>
</div>
