<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "info_user" %></h3>
        <div class="pull-right">
          <span class="clickable filter" data-toggle="tooltip" title="" data-container="body" data-original-title="Toggle table filter">

          </span>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover" id="dev-table">
          <thead>
            <tr>
              <th>#</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Full name</td>
              <td><%= @order.user.name %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @order.user.email %></td>
            </tr>
            <tr>
              <td>Phone</td>
              <td><%= @order.phone %></td>
            </tr>
            <tr>
              <td>Address</td>
              <td><%= @order.address %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "bill" %></h3>
        <div class="pull-right">
          <span class="clickable filter" data-toggle="tooltip" title="" data-container="body" data-original-title="Toggle table filter">

          </span>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover" id="dev-table">
          <thead>
            <tr>
              <th>#</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>ID Order</td>
              <td><%= @order.id %></td>
            </tr>
            <tr>
              <td>Total</td>
              <td><%= @order.order_details.sum(:price) %> (VNĐ)</td>
            </tr>
            <tr>
              <td>Shipping fee</td>
              <td>N/A</td>
            </tr>
            <tr>
              <td>Others</td>
              <td>N/A</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "book_info" %></h3>
        <div class="pull-right">
          <span class="clickable filter" data-toggle="tooltip" title="" data-container="body" data-original-title="Toggle table filter">

          </span>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover" id="dev-table">
          <thead>
            <tr>
              <th>
                <%= t "stt" %>
              </th>
              <th>
                <%= t "images" %>
              </th>
              <th>
                <%= t "product_name" %>
              </th>
              <th>
                <%= t "product_price" %>
              </th>
              <th>
                <%= t "product_quantity" %>
              </th>
              <th>
                <%= t "total_price" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |msg| %>
              <tr>
                <td>
                  <%= msg.id %>
                </td>
                <td>
                  <%= image_tag msg.product.images.url if msg.product.images? %>
                </td>
                <td><strong><%= msg.product.name %></strong>
                </td>
                <td> VNĐ</td>
                <td>
                  <%= msg.quantity %>
                </td>
                <td>
                  <%= msg.price %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "note" %></h3>
        <div class="pull-right">
          <span class="clickable filter" data-toggle="tooltip" title="" data-container="body" data-original-title="Toggle table filter">

          </span>
        </div>
      </div>
      <div class="panel-body">
        <div class="form-group margin10">
          <div class="col-sm-12">
            <%= form_for([:admin,@order]) do |f| %>
              <div class="form-group">
                <%= f.label :status %>
                <%= f.select :status, [["Checked", true], ["Unchecked", false]],
                {:prompt=>true}, {class: "form-control"} %>
              </div>
              <div class="center">
                <%= f.submit yield(:button_text), class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
