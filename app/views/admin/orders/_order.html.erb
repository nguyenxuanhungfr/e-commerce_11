<% orders.each.with_index 1 do |order, index| %>
  <tr>
    <td>
      <%= index %>
    </td>
    <td>
      <%= order.name %>
    </td>
    <td>
      <%= order.status %>
    </td>
    <td>
      <%= order.created_at.strftime("%Y-%m-%d") %>
    </td>
    <td>
      <%= link_to t("show"), edit_admin_order_path(order), class: "btn btn-primary" %>
    </td>
  </tr>
<% end %>
