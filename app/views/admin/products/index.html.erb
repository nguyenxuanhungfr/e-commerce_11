<%= provide :title, t("list_products") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "list_products" %></h1>

          <%= link_to t("add_product"), new_admin_product_path, class: "btn btn-primary float_right" %>
        </div>
        <div class="nav search-row" id="top_menu">
          <%= form_tag admin_products_path, method: :get do %>
            <%= text_field_tag :search, params[:search], class: "form-control sinput",placeholder: t("Enter_name") %>
            <%= select_tag :category_id, options_for_select(@categories),
               {class: "form-control search_category",include_blank: "Choose category"} %>
            <%= select_tag :status, options_for_select([['Stock', 0], ['Out of stock', 1]]),
           {class: "form-control search_statuses",include_blank: "Choose status"} %>
            <%= button_tag type: "submit", class: "btn btn-primary submit_search", name: nil do %>
              Search
            <% end %>
          <% end %>
          <h3 class="title"><strong><%= t "Total Users" %></strong> <span class="red_color"> <%= @products.present? ? @products.size : "0" %></span></h3>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= t "STT" %></th>
              <th>
                <%= t "categories" %>
              </th>
              <th>
                <%= t "images" %>
              </th>
              <th>
                <%= t "product name" %>
              </th>
              <th>
                <%= t "Status" %>
              </th>
              <th>
                <%= t "Create Date" %>
              </th>
              <th>
                <%= t "actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render "product", products: @products %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= paginate @products, theme: 'twitter-bootstrap-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
