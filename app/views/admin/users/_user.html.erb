<tr>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= user.name %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= user.role == 1 ? "admin":"user" %>
  </td>
  <td>
    <%= user.created_at.strftime("%Y-%m-%d") %>
  </td>
  <td>
    <%= link_to t("edit"), edit_admin_user_path(user),
      class: "btn btn-primary" %>
    <% if current_user.role== 1 && !current_user?(user) %>
      <%= link_to "delete", admin_user_path(user) , method: :delete,
        data: { confirm: "You sure?" }, class: "btn btn-danger" %>
    <% end %>
  </td>
</tr>
