<%= provide :title, t("list_categories") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "list_categories" %></h1>
          <%= link_to t("add_category"), new_admin_category_path, class: "btn btn-primary float_right" %>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>
                <%= t "id_category" %>
              </th>
              <th>
                <%= t "categories" %>
              </th>
              <th>
                <%= t "actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
