<div class="container_fullwidth">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="special-deal leftbar" style="margin-top:0;">
          <h4 class="title">
            <%= t "order" %>
          </h4>
          <% if @products_cart %>
            <% @products_cart.each do |product, quantity| %>
               <% if quantity.present? %>
                  <div class="special-item">
                    <div class="product-image">
                      <%= link_to (product) do %>
                        <%= gravatar_for product %>
                      <% end %>
                    </div>
                    <div class="product-info">
                      <p>
                        <%= link_to product.name, (product) %>
                      </p>
                      <h5 class="price">
                        <%= number_format product.price %>
                      </h5>
                       <h6 class="quantity">
                       x <%= quantity %>
                      </h6>
                    </div>
                  </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="checkout-page">
          <ol class="checkout-steps">
            <li class="steps active">
              <a href="javascript:void(0)" class="step-title">
                <%= t "payment" %>
              </a>
              <span class="step-title"><%= t("total") %> : <%= number_format @total %></span>
              <div class="step-description">
                 <%= form_for @order do |f| %>
                  <div class="row">
                    <div class="col-md-12 col-sm-12">
                      <%= render "shared/error", object: f.object %>
                      <div class="your-details">
                        <h5>
                          <%= t "address" %>
                        </h5>
                        <div class="form-row">
                          <label class="lebel-abs">
                            <%= t "name" %>
                            <strong class="red">
                              *
                            </strong>
                          </label>
                          <%= f.text_field :name, value: current_user.name,
                            class: "input", required: true, disabled: true %>
                        </div>
                        <div class="form-row">
                          <label class="lebel-abs">
                            <%= t "phone" %>
                            <strong class="red">
                              *
                            </strong>
                          </label>
                          <%= f.number_field :phone, class: "input", required: true %>
                        </div>
                        <div class="form-row">
                          <label class="lebel-abs">
                            Address
                            <strong class="red">
                              *
                            </strong>
                          </label>
                          <%= f.text_field :address, class: "input", required: true %>
                        </div>
                        <%= f.submit t("continue"), class: "btn btn-default" %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
    <div class="clearfix">
    </div>
  </div>
</div>
