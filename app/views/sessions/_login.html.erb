<%= form_for :session , url:login_path do |f| %>
  <div class="col-md-offset-4 col-md-6 col-sm-6">
    <%= render "flash/flash" %>
    <div class="your-details">
      <h5>
        <%= t "login" %>
      </h5>
      <div class="form-row">
        <label class="lebel-abs">
        <%= t "email" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.text_field :email, class: "input namefild" %>
      </div>
      <div class="form-row">
        <label class="lebel-abs">
         <%= t "password" %>
        <strong class="red">
        *
        </strong>
        </label>
        <%= f.password_field :password, class: "input namefild" %>
      </div>
       <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t "remember_me" %></span>
        <% end %>
      <%= f.submit t("login"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
