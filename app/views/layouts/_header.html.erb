<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2">
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag("logo.png", alt: t("shop")) %>
          <% end %>
        </div>
      </div>
      <div class="col-md-10 col-sm-10">
        <div class="header_top">
          <div class="row">
             <div class="col-md-3">
                <ul class="option_nav">
                   <li class="dorpdown">
                      <a href="#">Eng</a>
                      <ul class="subnav">
                         <li><a href="#">Eng</a></li>
                         <li><a href="#">Vns</a></li>
                         <li><a href="#">Fer</a></li>
                         <li><a href="#">Gem</a></li>
                      </ul>
                   </li>
                   <li class="dorpdown">
                      <a href="#">USD</a>
                      <ul class="subnav">
                         <li><a href="#">USD</a></li>
                         <li><a href="#">UKD</a></li>
                         <li><a href="#">FER</a></li>
                      </ul>
                   </li>
                </ul>
             </div>
             <div class="col-md-6">
                <ul class="topmenu">
                   <li><a href="#">About Us</a></li>
                   <li><a href="#">News</a></li>
                   <li><a href="#">Service</a></li>
                   <li><a href="#">Recruiment</a></li>
                   <li><a href="#">Media</a></li>
                   <li><a href="#">Support</a></li>
                </ul>
             </div>
             <div class="col-md-3">
                <ul class="usermenu">
                <% if logged_in? %>
                <li>
                  <%= link_to current_user.name, edit_user_path(current_user),
                    {class: "log"} %>
                </li>
                <li><%= link_to t("logout"), logout_path, method: :delete %></li>
                <% else %>
                <li><%= link_to t("login"), login_path,{class:  "log"} %></li>
                <li><%= link_to t("Register"), new_path,{class: "log"} %></li>
                <% end %>
              </ul>
             </div>
          </div>
       </div>
        <div class="clearfix"></div>
        <div class="header_bottom">
          <ul class="option">
            <%= form_tag root_path, method: :get do %>

              <style>
                .test>select{
                  margin-left: 0;
                }
              </style>
              <li style="float:left" class="test">
                <%= select_tag :category_id, options_for_select(@categories_option),
               {class: "form-control",:include_blank => "Choose Category"} %>
              </li>
              <li style="display: inline-block;float: left;">
                  <%= text_field_tag :search, params[:search], class: "form-control sinput",placeholder: "Enter_name" %>
              </li>
              <li style="display: inline-block;float: left;">
                  <%= text_field_tag :less_price, params[:less_price], class: "form-control sinput",placeholder: "Price lower than" %>
              </li>
              <li style="display: inline-block;float: left;">
                  <%= text_field_tag :higher_price, params[:higher_price], class: "form-control sinput",placeholder: "Price higher than " %>
              </li>
              <li style="display: inline-block;float: left">
                <%= button_tag type: "submit", class: "btn btn-primary", name: nil do %>
                  Search
                <% end %>
              </li>
              <li class="option-cart" style="display: inline-block;float: right;">
                <%= render "products/cart_header" %>
              </li>
            <% end %>
          </ul>
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="sr-only"><%= t "navigation" %></span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
          </div>
          <div class="navbar-collapse collapse">
             <ul class="nav navbar-nav">
              <% if params[:action]=="home" %>
                <% @active = "active" %>
              <% end %>
              <li class="dropdown <%= @active %>">
                <a href="<%= root_path %>"><%= t "home" %></a>
              </li>

              <% @categories.each do |category| %>
                <% if category.id == params[:id].to_i && params[:controller]=="categories" %>
                  <% @active = "active" %>
                <% else %>
                  <% @active = "" %>
                <% end %>
                 <li class="<%= @active %>"><%= link_to category.name, category_path(category) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
